<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#646464"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/cervejaText"
        android:layout_width="217dp"
        android:layout_height="103dp"
        android:background="#00FFFFFF"
        android:text="Cervejas"
        android:textAlignment="center"
        android:textColor="#E60000"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128" />

    <Spinner
        android:id="@+id/spinnerCerveja"
        android:layout_width="216dp"
        android:layout_height="62dp"
        android:background="#0B0A0A"
        android:backgroundTint="#15FFFFFF"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cervejaText"
        app:layout_constraintVertical_bias="0.427" />

    <TextView
        android:id="@+id/textViewMarcas"
        android:layout_width="278dp"
        android:layout_height="137dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCerveja" />

</androidx.constraintlayout.widget.ConstraintLayout>